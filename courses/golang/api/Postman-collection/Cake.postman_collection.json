		{
			"name": "Init SuperAdmin",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"var baseUrl = pm.environment.get('baseUrl');\r",
							"var email = pm.environment.get('email');\r",
							"var password = pm.environment.get('password');\r",
							"\r",
							"const optionsJWT = {\r",
							"    url: baseUrl + '/user/jwt',\r",
							"    method: 'POST',\r",
							"    header: { 'content-type': 'application/json' },\r",
							"    body: {\r",
							"        mode: 'raw',\r",
							"        raw: JSON.stringify({\r",
							"            \"email\": email,\r",
							"            \"password\": password\r",
							"        })\r",
							"    }\r",
							"};\r",
							"pm.sendRequest(optionsJWT, function (err, res) {\r",
							"    if (err) {\r",
							"        console.log(err);\r",
							"    }\r",
							"    else {\r",
							"        pm.environment.set(\"JWT\", res.text());\r",
							"    }            \r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
